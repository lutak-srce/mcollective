main_collective = mcollective
collectives = mcollective
libdir = /usr/libexec/mcollective
logfile = /var/log/mcollective.log
loglevel = info
daemonize = 1

# Plugins
securityprovider = psk
plugin.psk = unset

connector = rabbitmq
plugin.rabbitmq.vhost = /mcollective
plugin.rabbitmq.pool.size = 1
plugin.rabbitmq.pool.1.host = <%= @mq_master %>
plugin.rabbitmq.pool.1.port = <%= @mq_port %> #port for rabbitmq
plugin.rabbitmq.pool.1.user = <%= @mq_user %>
plugin.rabbitmq.pool.1.password = <%= @mq_password %>

# Facts
factsource = yaml
plugin.yaml = /etc/mcollective/facts.yaml

